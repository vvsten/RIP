{
  "productName": "GruzDelivery",
  "version": "1.0.0",
  "identifier": "com.gruzdelivery.app",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "devUrl": "http://localhost:3001",
    "frontendDist": "frontend/dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GruzDelivery",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' http://*:* https://*:* data: blob: 'unsafe-inline' 'unsafe-eval'; img-src 'self' http://*:* https://*:* data: blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  },
  "plugins": {}
}
